{% extends '@Karfilms/layout.html.twig' %}

{% block body %}
    <!--Vista para añadir géneros-->
    <section class="col-lg-6">
        <h2>Nuevo género</h2>
        <hr>
        <!--Creación del formulario que se envía desde el controlador-->
        {{ form_start(form, {'action':'', 'method':'POST'}) }}
        {{ form_end(form) }}
    </section>
    <div class="clearfix"></div>
    <!--Botón que lleva a la vista de todos los géneros-->
    <a href="{{ path("indice_genero") }}" class="btn btn-secondary">Cancelar</a>
{% endblock %}