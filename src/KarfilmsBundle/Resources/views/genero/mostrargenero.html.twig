{% extends '@Karfilms/layout.html.twig' %}

{% block estadogenero %} active {% endblock%}

{% block body %}
    <div class="col-lg-6">
        <h2>Géneros</h2>
        <hr>
        <div class="count">
            <span class="label label-primary">
                Géneros en total: {{ pagination.getTotalItemCount }}
            </span>
        </div>
        <table class="table table-bordered">
            <tr>
                <th>Nombre</th>
                <th>Acción</th>
            </tr>
            {% for genero in pagination %}
                <tr>
                    <td>{{ genero.nombre }}</td>
                    <td>
                        <a href="{{ path("categoria_genero", {"nombre":genero.nombre}) }}" class="btn btn-primary">Ver</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}