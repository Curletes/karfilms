{% extends '@Karfilms/layout.html.twig' %}

{% block title %} {{ parent() }} - Registrarse {% endblock %}

{%block estadologin %} active {% endblock %}

{% block body %}
    <div class="col-lg-6">
        <h2>Regístrate</h2>
        <hr>
        {% for message in app.session.flashbag().get('status') %}
            {% if message == "Registrado correctamente." %}
                <div class="alert alert-success">{{ message }}</div>
            {% else %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endif %}
        {% endfor %}
        {{ form_start(form, {'action':'', 'method':'POST'}) }}
        {{ form_end(form) }}
    </div>
    <div class="clearfix"></div>
    <p>¿Ya tienes una cuenta? <a href="{{ path("iniciar_sesion") }}">Iniciar sesión</a>.</p>
{% endblock %}