{% extends '@Karfilms/layout.html.twig' %}

{% block body %}
    <!--Vista para editar directores-->
    <section class="col-lg-6">
        <br>
        <nav aria-labelledby="navbar-label">
            <ul class="breadcrumb col-lg-10">
                <li>
                    <a itemprop="url" href="{{ path("inicio") }}">
                        <span itemprop="title">Inicio</span>
                    </a>
                    <span class="divider"> 
                        <span class="accesshide ">
                            <span class="arrow sep">►</span> 
                        </span>
                    </span>
                </li>
                <li>
                    <span itemprop="title">Administración</span>
                    <span class="divider"> 
                        <span class="accesshide ">
                            <span class="arrow sep">►</span> 
                        </span>
                    </span>
                </li>
                <li>
                    <a itemprop="url" href="{{ path("indice_director") }}">
                        <span itemprop="title">Directores</span>
                    </a>
                    <span class="divider"> 
                        <span class="accesshide ">
                            <span class="arrow sep">►</span> 
                        </span>
                    </span>
                </li>
                <li>
                    <a itemprop="url" href="{{ path("editar_director", {"id":director.id}) }}">
                        <span itemprop="title">Editar director</span>
                    </a>
                </li>
            </ul>
        </nav>
        <h2>Editar director</h2>
        <hr>
        <!--Se muestra el formulario generado en el controlador-->
        {{ form_start(form, {'action':'', 'method':'POST'}) }}
        {{ form_end(form) }}
    </section>
    <div class="clearfix"></div>
    <!--Botón para volver a la vista de todos los directores-->
    <a href="{{ path("indice_director") }}" class="btn btn-secondary">Cancelar</a>
{% endblock %}