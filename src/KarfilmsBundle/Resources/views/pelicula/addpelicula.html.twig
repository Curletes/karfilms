{% extends '@Karfilms/layout.html.twig' %}

{% block body %}
    <!--Vista para añadir películas-->
    <section class="col-lg-6">
        <h2>Nueva película</h2>
        <hr>
        <!--Creación del formulario que se envía desde el controlador-->
        {{ form_start(form, {'action':'', 'method':'POST'}) }}
        {{ form_end(form) }}
    </section>
    <div class="clearfix"></div>
    <!--Botón que lleva a la vista de todas las películas-->
    <a href="{{ path("indice_pelicula") }}" class="btn btn-secondary">Cancelar</a>
{% endblock %}