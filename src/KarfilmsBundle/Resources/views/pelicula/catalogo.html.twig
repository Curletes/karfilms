{% extends '@Karfilms/layout.html.twig' %}

{%block estadocatalogo %} active {% endblock %}

{% block body %}
    {% set id = 1 %}
    <h1>Catálogo</h1>
    <hr>
    <table class="table table-bordered">
        {% for pelicula in peliculas %}
            <tr>
                <td height="200" width="150"><img height="200" width="150" src="{{ asset("imagenes/carteles/" ~ pelicula.cartel) }}"</td>
                <td>
                    <h3>{{ pelicula.titulo }}</h3>
                    <p><strong>Duración: </strong>{{ pelicula.duracion }} minutos</p>
                    <p><strong>Clasificación por edades: </strong>{{ pelicula.idEdad.clasificacion }}</p>
                    <p>
                        <strong>Reparto: </strong>
                        {% for peli in pelicula.Actorpelicula %}
                            {{ peli.idActor.nombre }}
                        {% endfor %}
                    </p>
                    <p>
                        <strong>Dirección: </strong>
                        {% for peli in pelicula.Directorpelicula %}
                            {{ peli.idDirector.nombre }}
                        {% endfor %}
                    </p>
                    <p>
                        <strong>Géneros: </strong>
                        {% for peli in pelicula.Generopelicula %}
                            {{ peli.idGenero.nombre }}
                        {% endfor %}
                    </p>
                    <p><strong>Sinopsis: </strong>{{ pelicula.sinopsis }}</p>
                    <p>
                        <strong>Sesiones: </strong><br>
                        {% if pelicula.Sesiones is empty %}
                            No hay sesiones disponibles.
                        {% else %}
                            <select id="dia{{ id }}" class="form-control col-lg-2 float-left">
                            {% for sesion in pelicula.Sesiones %}
                                {% if usado is defined and usado != sesion.horarios|date("d-m") %}
                                    <option>{{ sesion.horarios|date("d-m") }}</option>
                                {% elseif usado is defined and usado == sesion.horarios|date("d-m") %}
                                    {% set usado = sesion.horarios|date("d-m") %}
                                {% else %}
                                    <option>{{ sesion.horarios|date("d-m") }}</option>
                                    {% set usado = sesion.horarios|date("d-m") %}
                                {% endif %}
                            {% endfor %}
                            </select>
                            {% set id = id + 1 %}
                            Horarios: 
                            {% for sesion in pelicula.Sesiones %}
                                {{ sesion.horarios|date("H:i") }}
                            {% endfor %}
                        {% endif %}
                    </p>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}