{% extends '@Karfilms/layout.html.twig' %}

{% block estadoactor %} active {% endblock%}

{% block body %}
    <div class="col-lg-6">
        <h2>Actores</h2>
        <hr>
        <div class="count">
            <span class="label label-primary">
                Actores en total: {{ pagination.getTotalItemCount }}
            </span>
        </div>
        <table class="table table-bordered">
            <tr>
                <th>Nombre</th>
                <th>Acci√≥n</th>
            </tr>
            {% for actor in pagination %}
                <tr>
                    <td>{{ actor.nombre }}</td>
                    <td>
                        <a href="{{ path("categoria_actor", {"nombre":actor.nombre}) }}" class="btn btn-primary">Ver</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}