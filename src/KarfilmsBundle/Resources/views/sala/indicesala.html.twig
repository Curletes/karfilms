                    <td>{{ sala.nombre }}</td>
                    <td>
                        <a href="{{ path("editar_sala", {"id":sala.id}) }}" class="btn btn-warning">Editar</a>
                        {% for sesion in sesiones %}
                            {% if sala.id == sesion.idSala.id %}
                                {% set enuso = true %}
                            {% endif %}
                        {% endfor %}
                        {% if enuso == true %}
                            <a href="#" class="btn btn-danger disabled">Eliminar</a>
                        {% else %}
                            <a href="{{ path("eliminar_sala", {"id":sala.id}) }}" class="btn btn-danger">Eliminar</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{ path("add_sala") }}" class="btn btn-primary">A침adir sala</a>
    </div>
    <div class="clearfix"></div>
{% endblock %}