{% extends '@Karfilms/layout.html.twig' %}

{% block body %}
    <div class="col-lg-6">
        <h2>Salas</h2>
        <hr>
        {% for message in app.session.flashbag().get('status') %}
            {% if message == "Sala a침adida correctamente." or message == "Sala editada correctamente." %}
                <div class="alert alert-success">{{ message }}</div>
            {% else %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endif %}
        {% endfor %}
        <table class="table table-bordered">
            <tr>
                <th>Clasificaci칩n</th>
                <th>Acci칩n</th>
            </tr>
            {% for sala in salas %}
                {% set enuso = false %}
