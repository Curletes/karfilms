{% extends '@Karfilms/layout.html.twig' %}

{% block body %}
    <!--Vista para añadir sesiones-->
    <div class="col-lg-6">
        <h2>Nueva sesión</h2>
        <hr>
        <!--Creación del formulario que se envía desde el controlador-->
        {{ form_start(form, {'action':'', 'method':'POST'}) }}
        {{ form_end(form) }}
    </div>
    <div class="clearfix"></div>
    <!--Botón que lleva a la vista de todas las sesiones-->
    <a href="{{ path("indice_sesion") }}" class="btn btn-secondary">Cancelar</a>
{% endblock %}